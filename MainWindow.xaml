<Window x:Class="NetGrab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="430" Width="351">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Name="tbStartName" Width="60" Margin="2">1000</TextBox>
        <Button Grid.Column="1" Name="btnGo"  Width="120" Margin="2" HorizontalAlignment="Left" Click="Button_Click">GO</Button>
        <ListBox Grid.Row="1" Grid.ColumnSpan="2" Name="lbLog" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="2"/>
    </Grid>
</Window>
